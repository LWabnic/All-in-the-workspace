package co.uk.idestsoft;

public class Result {
	static double percentage =0;
	static int physics=0;
	static int chemistry=0;
	static int biology=0;
	static int totalMark=0;
	
	public static void method1(int physics,int chemistry,int biology,int totalMark) {
		System.out.println("Physics result: "+physics+"\n"+"Chemistry result: "+chemistry+"\n"+"Biology result: "+biology+"\n"+"Total mark: "+totalMark);
	}
	public static void method2(int phy,int chem,int bio) {
		double phyPer=((phy)*100)/450;
		double chemPer=((chem)*100)/450;
		double bioPer=((bio)*100)/450;
		
		percentage = ((phy+chem+bio)*100)/450;
		System.out.println(percentage+"%");
		
		if(phyPer<60 || chemPer<60 || bioPer>60) {
			System.out.println("You failed");}
		else {
			System.out.println("You passed");
	}
}
