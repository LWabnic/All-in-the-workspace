	public static int method2(String word){ 
		
		if (word == null || word.isEmpty()){
			return 0; } 
		
		
		int words=0;
		
		for (int i = 0; i < word.length(); i++){
		    char c = word.charAt(i);
		    
		    if(i==word.length()-1 && words==0) {
		    	words=1;
		    	break;
		    }
		    if(i==word.length()-1 && words>0) {
		    	words++;
		    	break;
		    }
		    if(c==' ') {
		    	words++;
		    }
		    
		}
		return words;
		
	}
	public static void method3(String word){ 
		
		int i=0;
		int counter=-1;
		
		while(i<word.length()) {
			
			char c = word.charAt(i);
			counter++;
			if(c==' ')
			{
				System.out.println(word.substring(counter-i, i));
				counter=-1;
			}
			
			i++;
			
			//H,o,w, ,
		}
//		for (int i = 0; i < word.length(); i++){
