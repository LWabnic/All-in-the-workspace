package logistics;

public class TestAnything {
	public static int superBlock(String input) {
		int lastChar=0;
		int thisChar=0;
	
		
		for(int i=0;i<input.length();i++) {
		
		if(i==0)
			{
			thisChar++;
			continue;
			}
			else {
				if(input.charAt(i-1)==input.charAt(i))
				thisChar++;
				
				else {
				 {
						if(lastChar>thisChar)
						{
							thisChar=0;
							continue;
						}
						else {
							lastChar=thisChar;
							
						}
					}
				}
				
			}
			
		}
		
		System.out.println(lastChar);
		return lastChar;
	}
}
